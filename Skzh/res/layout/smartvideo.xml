<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:drawingCacheQuality="auto"
    android:background="@drawable/back">

<ImageButton 
    android:id="@+id/alarmsetting" 
	android:layout_width="100dp" 
	android:layout_height="45dp" 
	android:scaleType="fitXY"
	android:background="#00000000"
	android:layout_marginLeft="5dp"
	android:layout_marginTop="10dp"
	android:src="@drawable/alarmset"
    />

<ImageView 
	android:id="@+id/smarthomeengin" 
	android:background="@drawable/stop"
	android:layout_width="180dp" 
	android:layout_height="180dp" 
	android:layout_marginLeft="68dp"
	android:layout_marginTop="100dp" /> 
<Button
    android:id="@+id/smart_btnforward"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="78dp"
    android:layout_marginTop="260dp"
    android:background="@drawable/zheng_selector" />
<Button
    android:id="@+id/smart_btnstop"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="128dip"
    android:layout_marginTop="260dp"
    android:background="@drawable/ting_selector" />
<Button
    android:id="@+id/smart_btnback"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="178dp"
    android:layout_marginTop="260dp"
    android:background="@drawable/fan_selector" />

</FrameLayout>

